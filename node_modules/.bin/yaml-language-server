#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/ordinary-learn/blog/fuwari/node_modules/yaml-language-server/bin/node_modules:/mnt/d/ordinary-learn/blog/fuwari/node_modules/yaml-language-server/node_modules:/mnt/d/ordinary-learn/blog/fuwari/node_modules:/mnt/d/ordinary-learn/blog/node_modules:/mnt/d/ordinary-learn/node_modules:/mnt/d/node_modules:/mnt/d/ordinary-learn/blog/fuwari/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/ordinary-learn/blog/fuwari/node_modules/yaml-language-server/bin/node_modules:/mnt/d/ordinary-learn/blog/fuwari/node_modules/yaml-language-server/node_modules:/mnt/d/ordinary-learn/blog/fuwari/node_modules:/mnt/d/ordinary-learn/blog/node_modules:/mnt/d/ordinary-learn/node_modules:/mnt/d/node_modules:/mnt/d/ordinary-learn/blog/fuwari/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../yaml-language-server/bin/yaml-language-server" "$@"
else
  exec node  "$basedir/../yaml-language-server/bin/yaml-language-server" "$@"
fi
